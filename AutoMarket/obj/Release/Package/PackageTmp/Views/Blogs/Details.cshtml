@model AutoMarket.Models.Blog

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center my-4"><i class="bi bi-file-text me-2"></i>@Html.DisplayFor(model => model.Title)</h2>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
           
        </div>
        <div class="card-body">
            <div class="mb-3">
                <p class="lead"><i class="bi bi-book me-2"></i>@Html.DisplayFor(model => model.Content)</p>
            </div>

            <div class="mb-3 text-center">
                <img src="~/Content/Images/blog_images/@Model.ImageUrl" class="img-fluid rounded" alt="Blog Image" />
            </div>

            <div class="mb-3 text-muted">
                <small><i class="bi bi-calendar me-2"></i>@Html.DisplayFor(model => model.Date)</small>
            </div>
        </div>
        <div class="card-footer text-right">
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning mx-2" })
            }
            @Html.ActionLink("Back to Homepage", "Index", "Home", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
