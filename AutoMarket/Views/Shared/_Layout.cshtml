<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container">
            <a href="/Home/Index/" class="navbar-brand">Auto &nbsp;<span>Market</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    <li class="nav-item">@Html.ActionLink("Listings", "Index", "Listings", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Sell a car!", "Create", "Listings", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                    {
                        <li class="nav-item">@Html.ActionLink("Management", "Management", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    <li class="nav-item">@Html.ActionLink("About Us", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <!-- Hero Section -->

    <section class="hero">
        <div>
            <h1>Find Your Perfect Car Today</h1>
            <p>Browse through thousands of cars and find the one that suits you best.</p>
            @using (Html.BeginForm("Search", "Listings", FormMethod.Get, new { @class = "form" }))
            {
                @Html.TextBox("SearchQuery", null, new { @class = "form-control d-inline-block mt-3", placeholder = "Search for cars" })
                <button type="submit" class="btn btn-primary">Search</button>
            }
        </div>
    </section>


    <!-- Body Content -->
    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
