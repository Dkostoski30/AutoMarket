@model IEnumerable<AutoMarket.Models.City>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        /* Paste your CSS styles here */
        /* Table container */
        div.dataTables_wrapper {
            width: 80%;
            margin: 0 auto;
            background-color: #263238; /* Darker Grey Background */
            padding: 20px;
            border-radius: 10px;
        }

        /* Table Header */
        table.dataTable thead {
            background-color: #1F2C38; /* Dark Blue Background */
            color: #E0E0E0; /* Light Grey Text */
        }

            /* Table Header Cells */
            table.dataTable thead th {
                padding: 10px;
                border-bottom: 1px solid #37474F; /* Dark Grey Border */
            }

        /* Table Body */
        table.dataTable tbody {
            background-color: #263238; /* Darker Grey Background */
        }

            /* Table Rows */
            table.dataTable tbody tr {
                border-bottom: 1px solid #37474F; /* Dark Grey Border */
            }

            /* Table Cells */
            table.dataTable tbody td {
                padding: 10px;
                color: #E0E0E0; /* Light Grey Text */
            }

            /* Hover Effects */
            table.dataTable tbody tr:hover {
                background-color: #37474F; /* Dark Grey Background */
                color: #18BC9C; /* Emerald Green Text */
            }

        /* Pagination Controls */
        .dataTables_paginate .paginate_button {
            background-color: #18BC9C; /* Emerald Green */
            color: #ffffff;
            padding: 5px 10px;
            margin: 0 2px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .dataTables_paginate .paginate_button:hover {
                background-color: #16A085; /* Darker Emerald Green */
            }

        /* Search Input */
        .dataTables_filter input {
            background-color: #263238; /* Darker Grey Background */
            border: 1px solid #37474F; /* Dark Grey Border */
            color: #E0E0E0; /* Light Grey Text */
            padding: 5px 10px;
            border-radius: 4px;
        }

        /* Length Menu */
        .dataTables_length select {
            background-color: #263238; /* Darker Grey Background */
            border: 1px solid #37474F; /* Dark Grey Border */
            color: #E0E0E0; /* Light Grey Text */
            padding: 5px 10px;
            border-radius: 4px;
        }

        .dataTables_paginate .paginate_button {
            background-color: #18BC9C; /* Emerald Green */
            color: white;
            padding: 5px 10px;
            margin: 0 2px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        a {
            text-decoration: none;
            color: white;
        }

            a:hover {
                text-decoration: none;
                color: dimgrey;
            }

        .btn-delete {
            background-color: crimson;
        }

        .bootbox.modal .modal-body {
            background-color: #263238; /* Darker Grey Background */
            color: #E0E0E0; /* Light Grey Text */
        }

        .bootbox.modal .modal-footer {
            border-top: 1px solid #37474F; /* Dark Grey Border */
            background-color: #1F2C38; /* Dark Blue Background */
            color: #E0E0E0; /* Light Grey Text */
        }

        div.bootbox.modal.fade.bootbox-confirm.show > div > div > div.modal-body > button {
            background-color: #37474F;
            color: #E0E0E0; /* Light Grey */
            border: 1px solid #263238;
            border-radius: .25rem;
            opacity: 1;
            text-shadow: none;
        }

            div.bootbox.modal.fade.bootbox-confirm.show > div > div > div.modal-body > button:hover,
            div.bootbox.modal.fade.bootbox-confirm.show > div > div > div.modal-body > button:focus {
                color: #FF035C; /* Red */
                background-color: #37474F;
                opacity: 1;
            }

        .bootbox.modal .btn {
            background-color: #18BC9C; /* Emerald Green */
            color: #ffffff; /* White Text */
            border: none;
            border-radius: 4px;
            transition: background 0.3s ease;
        }

            .bootbox.modal .btn:hover {
                background-color: #16A085; /* Darker Emerald Green */
            }

        /* Responsive adjustments */
        @@media(max-width: 600px) {
            div.dataTables_wrapper {
                width: 100%;
                text-align: left;
                padding: 10px;
            }

            table.dataTable tbody td, table.dataTable thead th {
                display: block;
                width: 100%;
                text-align: left;
                box-sizing: border-box;
            }

            table.dataTable thead {
                display: none;
            }

            table.dataTable tbody tr {
                margin-bottom: 15px;
                border-bottom: 2px solid #37474F;
            }

            table.dataTable tbody td:before {
                content: attr(data-label);
                font-weight: bold;
                display: inline-block;
                width: 100px;
            }

            table.dataTable tbody td {
                display: flex;
                justify-content: space-between;
                padding: 10px;
                border: none;
            }

                table.dataTable tbody td:last-child {
                    border-bottom: 1px solid #37474F;
                }
        }
    </style>
</head>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table" id="cityTable" style="color: snow;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-action btn-edit my-2" })
                    <button data-city-id="@item.Id" class="js-delete btn btn-action btn-delete my-2">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(() => {
            var table = $("#cityTable").DataTable();

            function bindDeleteButtons() {
                $(".js-delete").off("click").on("click", function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this city?", function (result) {
                        if (result) {
                            $.ajax({
                                url: "/Cities/Delete/" + button.attr("data-city-id"),
                                method: "GET",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                },
                                error: function (err) {
                                    console.log(err);
                                }
                            });
                        }
                    });
                });
            }

            // Bind delete buttons initially
            bindDeleteButtons();

            // Rebind delete buttons every time the table is redrawn
            table.on('draw', function () {
                bindDeleteButtons();
            });
        });
    </script>
}

