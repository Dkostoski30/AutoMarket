            // Check if the user is not logged in and hasn't accepted terms yet
            var isUserLoggedIn = @Html.Raw(Json.Encode(User.Identity.IsAuthenticated));
            var hasAcceptedTerms = localStorage.getItem('acceptedTerms');

            if (!isUserLoggedIn && !hasAcceptedTerms) {
                $('#termsModal').modal('show');
            }

            // Handle the acceptance of terms
            $('#acceptTerms').click(function() {
                localStorage.setItem('acceptedTerms', true);
                $('#termsModal').modal('hide');
            });

            // Handle the decline of terms (optional)
            $('#declineTerms').click(function() {
                // Optional: redirect or perform some action on decline
                alert('You must accept the terms and conditions to proceed.');
            });

